<h1>Review for <%= @restaurant.name %></h1>

<%= form_for([@restaurant, @review]) do |review| %>
	<p>
		<%= review.label :comment %><br>
		<%= review.text_area :text, id:'text' %>
	</p>
	<p>
		<%= review.label :rating %><br>
		<%= review.select :rating, [1,2,3,4,5] %>
	</p>
	<p>
		<%= review.submit 'Submit your review', :name => 'submit' %>
	</p>
<% end %>