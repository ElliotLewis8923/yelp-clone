<h1>Welp</h1>
<%= link_to 'Add a new restaurant', new_restaurant_path %>

<h1>Restaurants:</h1>
<% if @restaurants.any? %>
	<% @restaurants.each do |restaurant| %>
		<h1><a href='/restaurants/<%= restaurant.id %>'><%= restaurant.name %></a></h1>
		<p>Average rating:</p>
			<%= star_rating(restaurant.average_rating) %>
	<% end %>
<% else %>
	<h1>No restaurants yet</h1>
<% end %>